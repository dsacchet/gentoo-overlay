start() {
        ebegin "Starting smsd"
        start-stop-daemon --start --quiet --exec /usr/sbin/smsd -- -c/etc/smstools/smsd.conf &
        eend $?
}

stop() {
        ebegin "Stopping smsd"
        start-stop-daemon --stop --quiet --exec /usr/sbin/smsd -- -c/etc/smstools/smsd.conf &
        eend $?
}
